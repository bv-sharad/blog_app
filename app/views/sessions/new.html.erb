<div class=" form-style-9">
<h1>Sign in</h1>
<%= form_tag signin_path do %>
	<p>
  <%= label_tag :email %>
	<%= text_field_tag :email %>
	</p>
	<p>
  <%= label_tag :password %>
	<%= password_field_tag :password %>
	</p>
	<p>
	<%= submit_tag "Sign in" %>
	</p>
<% end %>
</div>
<% if current_user %>
  <p class = "alert">
  <%= flash[:notice] %>
  </p>
<% else %>
     <p class = "alert">
     <%= flash[:alert] %>
     </p>
<% end %>
